{
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "max-line-length": { "options": [120] },
    "variable-name": [true, "allow-leading-underscore"],
    "indent": [true, "spaces", 2],
    "interface-over-type-literal": false
  }
}